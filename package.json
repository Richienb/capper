{
	"name": "capper",
	"productName": "Capper",
	"version": "0.2.0",
	"private": true,
	"description": "Generate lyric videos.",
	"repository": "https://github.com/Richienb/capper.git",
	"author": "Richie Bendall <richiebendall@gmail.com>",
	"license": "MIT",
	"main": "src/index.js",
	"engines": {
		"node": ">=10.17 <11 || >=11.14"
	},
	"scripts": {
		"start": "electron-forge start",
		"test": "xo"
	},
	"keywords": [
		"captions",
		"subtitles",
		"text",
		"audio",
		"gui"
	],
	"dependencies": {
		"@sentry/electron": "^1.5.2",
		"array-move": "^3.0.0",
		"cash-dom": "^8.0.0",
		"delay": "^4.4.0",
		"electron-debug": "^3.1.0",
		"electron-squirrel-startup": "^1.0.0",
		"ffmpeg.js": "^4.2.9003",
		"material-components-web": "^7.0.0",
		"normalize.css": "^8.0.1",
		"p-cancelable": "^2.0.0",
		"p-each-series": "^2.1.0",
		"pify": "^5.0.0",
		"rxjs": "^6.6.2",
		"subtitle": "^2.0.3",
		"update-electron-app": "^1.5.0"
	},
	"devDependencies": {
		"@electron-forge/cli": "6.0.0-beta.52",
		"@electron-forge/maker-deb": "6.0.0-beta.52",
		"@electron-forge/maker-dmg": "^6.0.0-beta.52",
		"@electron-forge/maker-rpm": "6.0.0-beta.52",
		"@electron-forge/maker-snap": "^6.0.0-beta.52",
		"@electron-forge/maker-squirrel": "6.0.0-beta.52",
		"@electron-forge/publisher-github": "^6.0.0-beta.52",
		"electron": "9.1.2",
		"electron-reloader": "^1.0.1",
		"eslint-config-richienb": "^0.4.2",
		"xo": "^0.32.1"
	},
	"config": {
		"forge": {
			"packagerConfig": {
				"executableName": "capper",
				"icon": "src/icon.icns"
			},
			"makers": [
				{
					"name": "@electron-forge/maker-squirrel",
					"config": {
						"name": "Capper"
					}
				},
				{
					"name": "@electron-forge/maker-deb",
					"config": {
						"options": {
							"name": "capper",
							"productName": "Capper",
							"maintainer": "Richie Bendall",
							"homepage": "https://richienb.github.io",
							"description": "Generate lyric videos.",
							"icon": "src/icon.png",
							"section": "graphics"
						}
					}
				},
				{
					"name": "@electron-forge/maker-rpm",
					"config": {
						"options": {
							"maintainer": "Richie Bendall",
							"homepage": "https://richienb.github.io",
							"categories": [
								"AudioVideo",
								"Graphics",
								"Utility"
							],
							"description": "Generate lyric videos.",
							"license": "MIT",
							"name": "capper",
							"productName": "Capper"
						}
					}
				},
				{
					"name": "@electron-forge/maker-dmg",
					"config": {
						"name": "Capper",
						"icon": "src/icon.icns"
					}
				},
				{
					"name": "@electron-forge/maker-snap",
					"config": {
						"name": "capper",
						"summary": "Generate lyric videos.",
						"features": {
							"audio": true,
							"browserSandbox": true
						},
						"grade": "stable"
					}
				}
			],
			"publishers": [
				{
					"name": "@electron-forge/publisher-github",
					"config": {
						"repository": {
							"owner": "Richienb",
							"name": "capper"
						}
					}
				}
			]
		}
	},
	"xo": {
		"extends": "richienb",
		"ignores": [
			"src/fabric/*.js"
		],
		"rules": {
			"node/no-unpublished-require": [
				"error",
				{
					"allowModules": [
						"electron"
					]
				}
			]
		},
		"overrides": [
			{
				"files": "src/app.js",
				"globals": [
					"fabric"
				],
				"rules": {
					"import/no-unassigned-import": [
						"error",
						{
							"allow": [
								"src/fabric"
							]
						}
					]
				}
			}
		]
	}
}
